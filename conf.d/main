#!/bin/sh -ex

DB_NAME=owncloud
DB_USER=owncloud
DB_PASS=$(mcookie)

ADMIN_NAME=admin
ADMIN_PASS=turnkey

SRC=/usr/local/src
WEBROOT=/var/www/owncloud

# For ownCloud v5, use the debian repo instead of the tarball.
# It will make upgrades much easier in the future
echo 'deb http://download.opensuse.org/repositories/isv:ownCloud:community/Debian_7.0/ /' >> /etc/apt/sources.list.d/owncloud.list 
apt-get update
DEBIAN_FRONTEND=noninteractive apt-get -y --force-yes \
    -o DPkg::Options::=--force-confdef \
    -o DPkg::Options::=--force-confold \
    install owncloud 
    

# configure apache
a2dissite default
a2ensite owncloud
a2enmod rewrite

# start services
/etc/init.d/mysql start
/etc/init.d/apache2 start

# setup the database
MYSQL_BATCH="mysql --user=root --password=$MYSQL_PASS --batch"
MYSQL_ADMIN="mysqladmin --user=root --password=$MYSQL_PASS"

$MYSQL_ADMIN create $DB_NAME
$MYSQL_BATCH --execute "grant all privileges on $DB_NAME.* to $DB_USER@localhost identified by '$DB_PASS'; flush privileges;"

# autoconfig curl based install
cat >$WEBROOT/config/config.php<<EOF
<?php
\$CONFIG = array(
    "installed" => false,
    "directory" => "$WEBROOT/data",
    "dbtype" => "mysql",
    "dbname" => "$DB_NAME",
    "dbuser" => "$DB_USER",
    "dbpass" => "$DB_PASS",
    "dbhost" => "localhost",
    "passwordsalt" => "mypasswordsalt",
    "dbtableprefix" => ""
);
?>
EOF

chown -R www-data:www-data $WEBROOT

# bugfix: image thumbnails aren't displayed
sed -i '/^$/d' $WEBROOT/apps/files_odfviewer/appinfo/app.php

# tweak footer
TEMPLATE=$WEBROOT/core/templates/layout.guest.php
sed -i "s|<footer>.*|<footer><p class='info' style='width: auto \!important;'><a href='http://www.turnkeylinux.org/owncloud'>ownCloud Appliance</a> \&ndash; Powered by <a href='http://www.turnkeylinux.org'>TurnKey Linux</a></p></footer>|" $TEMPLATE

# tweak permissions
chmod 640 $WEBROOT/config/config.php

# tweak xcache
XCACHEINI=/etc/php5/conf.d/20-xcache.ini
sed -i "s|xcache.admin.enable_auth.*|xcache.admin.enable_auth = Off|" $XCACHEINI
sed -i "s|xcache.var_size.*|xcache.var_size = 32M|" $XCACHEINI

# stop services
/etc/init.d/mysql stop
/etc/init.d/apache2 stop

